html {
  @include desktop {
    font-size: 15px;
  }
  @include tablets {
    font-size: 14px;
  }
}
body,
html {
  height: 100%;
}

@font-face {
  font-family: 'Montserrat-400', sans-serif;
  src: url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap');
}

body {
  font-family: 'Montserrat-700', sans-serif;
  font-weight: 400;
  font-size: 16px;
  line-height: 1.42;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  color: $dark-shade50;
}

.wrapper {
  min-height: 100%;
  position: relative;
  background-color: #ffffff;
  margin-top: 15px;
}

.container {
  margin: 0 auto;
  max-width: 1160px;
  width: 95%;
  height: 100%;

  @include phones {
    width: 85%;
  }
}

.fullscreen-section {
  height: 100vh;
  min-height: 650px;
}

button {
  border: 0;
  cursor: pointer;
}

* {
  box-sizing: border-box;
}

ul {
  padding: 0;
  margin: 0;
  list-style: none;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: normal;
  margin: 0;
}

p {
  margin: 0;
  padding: 0;
}

button[type="button"] {
  cursor: pointer;
  background-color: transparent;
}

a {
  color: inherit;
  cursor: pointer;
  display: block;
}

img {
  display: block;
  max-width: 100%;
  max-height: 100%;
  height: 100%;
}

svg {
  max-width: 100%; 
  max-height: 100%;
  width: 100%;
  height: 100%;
}

